<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    android:background="@drawable/back_round"
    android:backgroundTint="@color/colorBackGround">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:button="@drawable/check_box_back"
            android:buttonTint="@color/AppColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack_300"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:maxLines="3"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkBox"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgTime"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/alarm_clock"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/textTime"
            app:layout_constraintTop_toBottomOf="@id/textText"
            app:tint="@color/colorWhite_600" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack_600"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/checkBox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>